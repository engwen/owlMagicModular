<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.owl.shiro.dao.OwlRoleDao">

    <resultMap id="BaseResultMap" type="com.owl.shiro.model.OwlRole">
        <!-- 请添加所需要的属性-->
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Table_ID_Name">
        id
    </sql>
    <sql id="Table_Name">
        owl_role
    </sql>
    <sql id="Base_Column_List">
        <include refid="Table_ID_Name"/> ,
        role
    </sql>
    <sql id="Order_Name">
        role
    </sql>

    <sql id="Select_Like">
        <trim prefix="where" suffixOverrides="and">
            <if test="null != model">
                <choose>

                    <when test="null != model.id">
                        <include refid="Table_ID_Name"/>  = #{model.id}
                    </when>

                    <otherwise>

                        <if test="null != model.role">
                            (role like CONCAT(CONCAT('%',#{model.role}),'%'))
                            AND
                        </if>

                    </otherwise>
                </choose>
            </if>
        </trim>
    </sql>

    <sql id="Select_Exact">
        <trim prefix="where" suffixOverrides="and">
            <if test="null != model">
                <choose>

                    <when test="null != model.id">
                        <include refid="Table_ID_Name"/>  = #{model.id}
                    </when>

                    <otherwise>

                        <if test="null != model.role">
                            role = #{model.role}
                            AND
                        </if>

                    </otherwise>
                </choose>
            </if>
        </trim>
    </sql>

    <insert id="insertSelective" parameterType="com.owl.shiro.model.OwlRole">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            select LAST_INSERT_ID()
        </selectKey>
        insert into <include refid="Table_Name"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="role != null">
                role,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">

            <if test="role != null">
                #{role},
            </if>

        </trim>
    </insert>

    <!-- 请添加所需要的属性-->
    <insert id="insertList">
        insert into <include refid="Table_Name"/>
        (

        role
        )
        values
        <foreach collection="modelList" item="model" separator=",">
            (

            #{model.role}
            )
        </foreach>
    </insert>

    <update id="updateBySelective">
        update <include refid="Table_Name"/>
        <set>
            <if test="role != null">
                role = #{role,jdbcType=VARCHAR},
            </if>

        </set>
        where <include refid="Table_ID_Name"/> = #{id,jdbcType=BIGINT}
    </update>

    <delete id="deleteBySelective">
        delete from <include refid="Table_Name"/>
        <trim prefix="where" suffixOverrides="and">
            <if test="id != null">
                <include refid="Table_ID_Name"/> = #{id}
            </if>
        </trim>
    </delete>

    <!-- 以下不需要改變  -->

    <delete id="deleteByIdList">
        delete from <include refid="Table_Name"/>
        WHERE <include refid="Table_ID_Name"/> IN
        <foreach collection="idList" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="selectBySelective" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from <include refid="Table_Name"/>
        <include refid="Select_Like"/>
        ORDER BY CONVERT(<include refid="Order_Name"/> using gbk) ASC
    </select>

    <select id="selectByExact" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from <include refid="Table_Name"/>
        <include refid="Select_Exact"/>
        ORDER BY CONVERT(<include refid="Order_Name"/> using gbk) ASC
    </select>

    <select id="countSumByCondition" resultType="java.lang.Integer">
        select count(<include refid="Table_ID_Name"/>) from
        <include refid="Table_Name"/>
        <include refid="Select_Like"/>
    </select>

    <select id="listByCondition" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from <include refid="Table_Name"/>
        <include refid="Select_Like"/>
        ORDER BY CONVERT(role using gbk) ASC
        limit #{upLimit},#{rows}
    </select>


    <select id="selectRoleByPermissionId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from owl_role a
        left join
        owl_role_permission b
        on a.id = b.role_id
        where b.permission_id = #{id};
    </select>
</mapper>